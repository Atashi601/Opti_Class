# This file is used to activate the Python virtual environment

# Save current PATH
_OLD_VIRTUAL_PATH="$PATH"
_OLD_VIRTUAL_PYTHONHOME="$PYTHONHOME"
_OLD_VIRTUAL_PS1="$PS1"

# Set new environment variables
export VIRTUAL_ENV="C:/Users/ASUS/opti-class-frontend/venv"
export PATH="$VIRTUAL_ENV/Scripts:$PATH"
unset PYTHONHOME

# Change the prompt to show the virtual environment
if [ -z "$VIRTUAL_ENV_DISABLE_PROMPT" ] ; then
    PS1="(`basename \"$VIRTUAL_ENV\"`) $PS1"
fi

# Function to deactivate venv
deactivate () {
    PATH="$_OLD_VIRTUAL_PATH"
    if [ -n "$_OLD_VIRTUAL_PYTHONHOME" ] ; then
        export PYTHONHOME="$_OLD_VIRTUAL_PYTHONHOME"
    else
        unset PYTHONHOME
    fi
    if [ -n "$_OLD_VIRTUAL_PS1" ] ; then
        PS1="$_OLD_VIRTUAL_PS1"
    fi
    unset VIRTUAL_ENV
    unset _OLD_VIRTUAL_PATH
    unset _OLD_VIRTUAL_PYTHONHOME
    unset _OLD_VIRTUAL_PS1
    unset -f deactivate
}
